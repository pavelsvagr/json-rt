{
  "name": "jsonrt",
  "version": "1.1.0",
  "description": "Simple serializable json representation of rich text.",
  "keywords": [
    "json",
    "rich text",
    "format"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pavelsvagr/json-rt.git"
  },
  "author": "Pavel Å vagr",
  "license": "MIT",
  "main": "./dist/main.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --colors --detectOpenHandles --runInBand --forceExit",
    "check": "npm-check -i app -i errors -i config -i index; exit 0",
    "lint": "npm run eslint:check",
    "prettier:check": "prettier --check '**/*.{ts,js,json,md}'",
    "prettier:fix": "npm run prettier:check -- --write '**/*.{ts,js,json,md}'",
    "eslint:check": "eslint --ext .ts src",
    "eslint:fix": "npm run eslint:check -- --fix",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "ci-test": "npm run cover -- --reporters=default --reporters=jest-junit --ci",
    "ci-lint": "npm run lint -- --f checkstyle -o ./output/checkstyle-result.xml"
  },
  "bugs": {
    "url": "https://github.com/pavelsvagr/json-rt/issues"
  },
  "homepage": "https://github.com/pavelsvagr/json-rt#readme",
  "engines": {
    "node": "14.15.1",
    "npm": "6.14.8"
  },
  "devDependencies": {
    "@ackee/styleguide-backend-config": "^0.2.2",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.22",
    "babel-eslint": "^10.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "semantic-release-gitmoji": "^1.3.4",
    "ts-jest": "^26.0.0",
    "typescript": "^4.2.3"
  }
}
